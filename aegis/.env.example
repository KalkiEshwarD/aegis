# Database Connection
DATABASE_URL=postgres://your_db_user:your_secure_db_password@postgres:5432/aegis?sslmode=disable

# MinIO Root Credentials (for MinIO container)
MINIO_ROOT_USER=your_secure_minio_root_user
MINIO_ROOT_PASSWORD=your_secure_minio_root_password

# MinIO Object Storage Credentials (for backend)
MINIO_ACCESS_KEY=your_secure_minio_access_key
MINIO_SECRET_KEY=your_secure_minio_secret_key

# JWT Authentication Secret (Required)
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production_32_chars_min

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=aegis-files

# Application Configuration
PORT=8080
GIN_MODE=debug
BASE_URL=http://localhost:8080

# CORS Security
CORS_ALLOWED_ORIGINS=http://localhost:3000